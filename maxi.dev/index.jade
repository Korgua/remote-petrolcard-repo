	body
		div.container
			div#login
				//-span#dimension
				div.row.shadow.radius.user-form-container
					div.one-third.column
						div.user-pic-holder.u-full-width
							img.user-pic(src="images/users/default4.png")
					div.two-thirds.column.u-pull-right
						form.login.no-tb-margin(method="post")
							div.row.login
								input.login.no-tb-margin.username.u-full-width(type="text" placeholder="Felhasználónév")
							div.row.login
								input.login.no-tb-margin.password.u-full-width(type="password" placeholder="Jelszó")
							div.row.login
								a.login.button.button-primary.u-full-width(href="#") Bejelentkezés
			//-div.u-full-width
				a.not-trigger(href="#") Sanyi
